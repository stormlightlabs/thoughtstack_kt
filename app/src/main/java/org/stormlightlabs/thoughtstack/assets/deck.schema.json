{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "DeckCollection",
    "type": "object",
    "properties": {
        "decks": {
            "type": "array",
            "items": {
                "$ref": "#/definitions/deck"
            },
            "minItems": 1
        }
    },
    "required": [
        "decks"
    ],
    "definitions": {
        "deck": {
            "type": "object",
            "properties": {
                "id": {
                    "type": "string"
                },
                "name": {
                    "type": "string"
                },
                "cards": {
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/card"
                    },
                    "minItems": 1
                }
            },
            "required": [
                "id",
                "name",
                "cards"
            ]
        },
        "card": {
            "type": "object",
            "properties": {
                "id": {
                    "type": "string"
                },
                "question": {
                    "type": "string"
                },
                "answer": {
                    "type": "string"
                }
            },
            "required": [
                "id",
                "question",
                "answer"
            ]
        }
    }
}